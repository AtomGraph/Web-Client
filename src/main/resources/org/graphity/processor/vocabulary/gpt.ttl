<#ConstructGraphResources>    a       sp:Construct, sp:Query ;
      sp:templates ([ sp:object _:objectVar ;
                  sp:predicate _:propertyVar ;
                  sp:subject _:subjectVar
                ]) ;
      sp:text """CONSTRUCT {
    ?subject ?property ?object .
}
WHERE {
    GRAPH ?this {
        ?subject ?property ?object .
    } .
