                            ]) ;
                  sp:graphNameNode
                          [ sp:varName "graph"^^xsd:string
                          ]
                ]) .

_:subjectVar  sp:varName "subject"^^xsd:string .
_:propertyVar  sp:varName "property"^^xsd:string .
_:objectVar  sp:varName "object"^^xsd:string .

