    spin:query [ a sp:Describe ; sp:text """PREFIX  rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX  gp:   <http://processor.graphity.org/ontology#>

DESCRIBE ?sitemap ?s
WHERE
{ GRAPH ?appGraph
  { ?app gp:base ?baseUri .
    ?app rdfs:isDefinedBy ?sitemap
