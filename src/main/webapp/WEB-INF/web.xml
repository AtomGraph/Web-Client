        </init-param>
	-->
        <init-param>
            <param-name>http://client.graphity.org/ontology#stylesheet</param-name>
            <param-value>org/graphity/client/writer/global-xhtml.xsl</param-value>
	    <!-- <param-value>org/graphity/client/writer/local-xhtml.xsl</param-value> -->
        </init-param>
        <init-param>
            <param-name>http://server.graphity.org/ontology#cacheControl</param-name>
            <param-value>no-cache</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>index</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
