@base <http://graphity.org/ontologies/visualizations> .

@prefix : <#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sp: <http://spinrdf.org/sp#> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .
@prefix dbpedia: <http://dbpedia.org/resource/> .

<> a owl:Ontology ;
    rdfs:label "Visualization Ontology"@en ;
    owl:imports <http://spinrdf.org/sp> .

# OBJECT PROPERTIES

:visualizedBy a owl:ObjectProperty ;
    rdfs:label "Visualized by"@en ;
    rdfs:domain sp:Select ;
    rdfs:range :Visualization ;
    rdfs:isDefinedBy <> .

:binding a owl:ObjectProperty ;
    rdfs:label "Binding"@en ;
    rdfs:domain :Visualization ;
    rdfs:range :Binding ;
    rdfs:isDefinedBy <> .

:variable a owl:ObjectProperty ;
    rdfs:label "Variable"@en ;
    rdfs:domain :Binding ;
    rdfs:range sp:Variable ;
    rdfs:isDefinedBy <> .

:value a owl:DatatypeProperty ;
    rdfs:label "Value"@en ;
    rdfs:range rdfs:Literal ;
    rdfs:isDefinedBy <> .

# CLASSES

# Visualizations

:Report a owl:Class ;
    rdfs:label "Report"@en ;
    rdfs:subClassOf sp:Query, sioc:Post .
sioc:Post a owl:Class .

:Visualization a owl:Class ;
    rdfs:label "Visualization"@en ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso <http://dbpedia.org/resource/Visualization_(computer_graphics)> .

:AreaChart a owl:Class ;
    rdfs:label "Area chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Area_chart .

:BarChart a owl:Class ;
    rdfs:label "Bar chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Bar_chart .

:ColumnChart a owl:Class ;
    rdfs:label "Column chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> .

:LineChart a owl:Class ;
    rdfs:label "Line chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Line_chart .

:Map a owl:Class ;
    rdfs:label "Map"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Map .

:PieChart a owl:Class ;
    rdfs:label "Pie chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Pie_chart .

:ScatterChart a owl:Class ;
    rdfs:label "Scatter chart"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso dbpedia:Scatter_plot .

:Table a owl:Class ;
    rdfs:label "Table"@en ;
    rdfs:subClassOf :Visualization ;
    rdfs:isDefinedBy <> ;
    rdfs:seeAlso <http://dbpedia.org/resource/Table_(information)> .

# Bindings

:Binding a owl:Class ;
    rdfs:label "Binding"@en ;
    rdfs:isDefinedBy <> .

:NumericBinding a owl:Class ;
    rdfs:subClassOf :Binding ,
    [ a owl:Restriction ;
	owl:onProperty :value ;
	owl:allValuesFrom [ owl:unionOf ( xsd:decimal
				    xsd:double
				    xsd:float
				    xsd:integer
				)
		    ] ;
    ] ;
    # owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
    rdfs:isDefinedBy <> .

:StringBinding a owl:Class ;
    rdfs:subClassOf :Binding ,
    [ a owl:Restriction ;
	owl:onProperty :value ;
	owl:allValuesFrom xsd:string
    ] ;
    # owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
    rdfs:isDefinedBy <> .

:DateBinding a owl:Class ;
    rdfs:subClassOf :Binding ,
    [ a owl:Restriction ;
	owl:onProperty :value ;
	owl:allValuesFrom [ owl:unionOf ( xsd:date
				    xsd:dateTime
				)
		    ]
    ] ;
    # owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
    rdfs:isDefinedBy <> .